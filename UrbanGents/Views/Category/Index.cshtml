@model List<Category>

<partial name="_Notification" />
<table class="table table-hover">
    <thead>
        <div class="d-flex justify-content-between p-3">
            <h2>Categories</h2>
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create New Category  <i class="bi bi-plus"></i></a>
        </div>

    </thead>
    <tbody class="table-dark">
        @foreach(var category in Model)
        {
            <tr class="">
                <td>
                    @category.Name
                </td>
                <td>
                    <div>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary"> <i class="bi bi-pencil-fill"></i> Edit</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger"> <i class="bi bi-trash3-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>