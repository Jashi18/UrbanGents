@model Category

<form method="post">
    <div>
        <div>
            <h2>Delete Category</h2>
            <hr />
        </div>
        <div>
            <label>Category Name</label>
            <input asp-for="Name" type="text" disabled class="form-control" />
        </div>
        <div class="mt-4 d-flex">
            <button type="submit" class="btn btn-danger w-25">Delete</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary w-25">Back</a>
        </div>

    </div>
</form>